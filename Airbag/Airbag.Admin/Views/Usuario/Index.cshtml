@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="~/Styles/datatables.min.css" rel="stylesheet" />
}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-th-list"></i> Lista de usuarios</h1>
        </div>
    </div>
    <button class="btn btn-info" type="button" id="btnactivarUsuario">Activar</button>
    <button class="btn btn-danger" type="button" id="btndesactivarUsuario">Desactivar</button>

    <br><br>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                        <table class="table table-hover table-bordered display" id="TablaUsuarios" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Apellido Paterno</th>
                                    <th>Apellido Materno</th>
                                    <th>Correo</th>
                                    <th>Estatus</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{

    <script src="~/Js/datatables.min.js"></script>
    <script src="~/Scripts/Usuario/Usuario.js"></script>
}