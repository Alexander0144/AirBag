@model IEnumerable<Airbag.Datos.tblCompra>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {

    <link href="~/Styles/datatables.min.css" rel="stylesheet" />

}

<main class="app-content">
    <div class="app-title">
        <div>
            <h1><i class="fa fa-th-list"></i> Lista de compras</h1>
        </div>
    </div>
    <button class="btn btn-success" type="button" data-toggle="modalDetalles" id="btnDetalles">Ver detalles</button>

    <br>
    <div class="row">
        <div class="col-md-12">
            <div class="tile">
                <div class="tile-body">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered display" id="TablaCompras" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Apellido Paterno</th>
                                    <th>Apellido Materno</th>
                                    <th>Producto</th>
                                    <th>Fecha de Compra</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section scripts{

    <script src="~/Js/datatables.min.js"></script>
    <script src="~/Js/compra.js"></script>

}